{% extends "TTVWebsiteBundle::layout.html.twig" %}

{% block meta %}
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
{% endblock %}
{% block title %}
    Erreur Code {{ status_code }} - {{ parent() }}
{% endblock %}

{% block body %}



    <div class="text-center mar-bottom-5x mar-top-5x">
        <h1>Oups! Une Erreur 404</h1>
        <h2>Le serveur a renvoyé une erreur "{{ status_code }}".</h2>

        <h3>
            Il semblerait que la page ou la figure que vous demandée n'existe pas !
        </h3>

    </div>

{% endblock %}